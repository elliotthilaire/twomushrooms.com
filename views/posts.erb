
<div class="posts offset1 span9">
  <% @posts.each do |post| %>
    <div class="post">
      <h3 class="title"><%= post.title %></h3>
      <h6 class="date"><%= post.published_at %></h6>
      <p class="body"><%= post.body %></p>
      <p><a href="/blog/<%= post.slug %>">Read more...</a></p>
    </div><!--.post-->
  <% end %>
</div><!--.posts-->

