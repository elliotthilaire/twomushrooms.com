<div class="photo">
        <!--<span class="glyphicon glyphicon glyphicon-chevron-left"></span>-->
        <img class="fill" src="<%=thumbnail_url_for(@photo.url, "1200x900")%>" alt="<%=@photo.caption%>" />
        <!--<span class="glyphicon glyphicon glyphicon-chevron-right"></span>-->
        <div class="info">
          <ul class="like-buttons">
              <!-- these don't look good yet.
              <li class="g-plus-one">
                  <g:plusone count="false"></g:plusone>
              </li>
              <li class="twitter-like">
              <a href="https://twitter.com/share" class="twitter-share-button" data-count="none">Tweet</a>
              </li>
              -->
              <li class="fb-like" data-href="http://<%=request.url%>" data-send="false" data-layout="button_count" data-width="450" data-show-faces="false">
              </li>
          </ul>
          <span class="date">
            <%=@photo.date_taken.strftime("#{@photo.date_taken.day.ordinalize} %B, %Y")%>
          </span>
        </div><!--.info-->  
    
</div>


