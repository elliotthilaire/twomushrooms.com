
<div class="gallery">
    <div class="photo">
      <div class="inline-block">
        <img src="<%=thumbnail_url_for(@photo.url, "940x620")%>" alt=""></img>

        <div class="info">
          <span class="media-buttons">        
            <span class="g-plusone" data-size="small"></span>
            <span class="fb-like" data-href="http://<%= @photo.url %>" data-send="false" data-layout="button_count" data-width="450" data-show-faces="false"></span>
          </span><!--.media-buttons-->

          <span class="date">
            <%=@photo.date_taken.strftime("#{@photo.date_taken.day.ordinalize} %B, %Y")%>
          </span>
        </div><!--.info-->
      </div><!--.inline-block-->
    </div><!--.photo-->
</div><!--.gallery-->



<!-- Place this tag after the last +1 button tag. -->
<script type="text/javascript">
  (function() {
    var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
    po.src = 'https://apis.google.com/js/plusone.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
  })();
</script>


<div id="fb-root"></div>
<script>(function(d, s, id) {
