

<div class="vertical-container">
    <div class="vertically-centered">
        <div id="image-box" class="image-box">
            <img id="image" src="<%= @photo.image.thumb('1200x900').watermark.url %>" alt="<%=@photo.caption%>"/>
            <div class="info">
                <span class="title"></span>
                <span class="date"><%=@photo.date_taken.strftime("#{@photo.date_taken.day.ordinalize} %B, %Y")%></span>
                <span class="share-buttons">
                  <!-- AddThis Button BEGIN -->
                  <div class="addthis_toolbox addthis_default_style addthis_32x32_style ">
                  <a class="addthis_button_preferred_1"></a>
                  <a class="addthis_button_preferred_2"></a>
                  <a class="addthis_button_preferred_3"></a>
                  <a class="addthis_button_preferred_4"></a>
                  <a class="addthis_counter addthis_bubble_style"></a>
                  </div>
                  <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-5355d07e107147ca"></script>
                  <!-- AddThis Button END -->
                  <span>
            </div>
        </div>
    </div> 
</div>





<script>

$(document).ready(function() {

    $('img').addClass('collapse');
    
    $(".collapse").on('load', function(){
     $(this).fadeIn().removeClass('collapse');
    });

    
});


  h = document.body.clientHeight;
  document.getElementById("image").style.maxHeight=h-150+"px";

window.onresize = function(event) {
  h = document.body.clientHeight;
  document.getElementById("image").style.maxHeight=h-150+"px";

};
</script>
