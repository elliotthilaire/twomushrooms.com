<div id="top"></div>

<div class="gallery">
  <% @photos.each do |photo| %>
    <div class="photo col-xs-12 col-sm-6 col-md-4">
      <a href="/<%= photo.slug %>" >
        <img src="<%= photo.image.thumb('300x300').url %>" alt="<%= photo.title %>"/>
      </a>
    </div>
  <% end %>
</div>

<a id="link_to_top" href="#top">Back to top</a>
