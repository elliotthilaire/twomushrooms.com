<style>

#splash {
  position:fixed;
  top:0;
  left:0;
  background: black;
  height:100%;
  width:100%;
  z-index:999;

  display:none;
}

.splash-container {
   text-align:center;
   position:fixed;
   width: 100%;
   height: 50px;
   top: 30%;
}

.splash p {
   text-align:center;
   line-height: 50px;
   font-size: 4vw;
   color: #222;
}
.splash .inner {text-align:center}
</style>

<div id="splash">
<div class="splash-container">
<div class="inner">
<h3>I'm Elliott Hilaire.</h3>
<h4>Let me show you the little things.</h4>

</div>
</div>
</div>

<script>
  $(document).ready(function(e){

    var time = new Date().getTime();
    // If the user has not visited in a week show splash page
    if (time - localStorage.getItem('splash') > 604800000){
      $("#splash").show();
      $("#splash").delay(2000).fadeOut(1000);
      var time = new Date().getTime();
      localStorage.setItem('splash', time);
    }
});
</script>

